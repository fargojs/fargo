{
  "name": "@zotera/monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache packages/*/{src,test}/**/*.{js,ts,tsx}",
    "build": "pnpm -r --filter=@zotera/* run build",
    "dev": "pnpm -r --parallel --filter=@zotera/* run dev",
    "test": "pnpm -r --parallel --filter=@zotera/* run test",
    "update:dep-versions": "tsx scripts/update-versions.ts",
    "update:default-config": "tsx scripts/build-default-configuration.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@luxass/eslint-config": "^1.0.7",
    "@luxass/prettier-config": "^1.0.4",
    "@types/js-yaml": "^4.0.5",
    "eslint": "^8.22.0",
    "got": "^12.3.1",
    "prettier": "^2.7.1",
    "tsup": "^6.2.2",
    "tsx": "^3.8.2",
    "typescript": "^4.7.4",
    "vitest": "^0.18.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.5.0",
  "pnpm": {
    "patchedDependencies": {
      "vite@3.0.0": "patches/vite@3.0.0.patch",
      "tsup@6.2.2": "patches/tsup@6.2.2.patch"
    }
  }
}
