{
  "name": "@zotera/monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache {packages,vscode}/*/src/**/*",
    "build": "pnpm -r --filter=@zotera/* run build",
    "dev": "pnpm -r --parallel --filter=@zotera/* run dev",
    "test": "pnpm -r --parallel --filter=@zotera/* run test",
    "update:dep-versions": "tsx scripts/update-versions.ts",
    "update:build-configuration": "tsx scripts/build-configuration.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@luxass/eslint-config": "^1.0.7",
    "@luxass/prettier-config": "^1.0.4",
    "eslint": "^8.23.0",
    "lint-staged": "^13.0.3",
    "node-fetch": "^3.2.10",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "tsup": "^6.2.3",
    "tsx": "^3.9.0",
    "typescript": "^4.8.2",
    "vitest": "^0.18.1"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.5.0",
  "pnpm": {
    "patchedDependencies": {
      "vite@3.0.0": "patches/vite@3.0.0.patch",
      "tsup@6.2.3": "patches/tsup@6.2.3.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/src/**/*.ts": [
      "eslint --cache --fix"
    ]
  }
}
