{
  "name": "fargo-monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache packages/*/{src,test}/**",
    "build": "pnpm -r --filter=./packages/* run build",
    "dev": "pnpm -r --parallel --filter=./packages/* run dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@luxass/eslint-config": "^1.0.3",
    "@luxass/prettier-config": "^1.0.4",
    "@types/node": "^18.0.3",
    "eslint": "^8.19.0",
    "prettier": "^2.7.1",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.5.0"
}
