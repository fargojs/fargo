{
  "name": "@zotera/monorepo",
  "type": "module",
  "version": "0.19.1",
  "private": true,
  "description": "A open-source registry for VSIX extensions",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache packages/*/{src,test}/**/*.{js,ts,tsx}",
    "build": "pnpm -r --filter=@zotera/* run build",
    "dev": "pnpm -r --parallel --filter=@zotera/* run dev",
    "test": "pnpm -r --parallel --filter=@zotera/* run test"
  },
  "license": "MIT",
  "devDependencies": {
    "@luxass/eslint-config": "^1.0.6",
    "@luxass/prettier-config": "^1.0.4",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "esbuild": "^0.14.50",
    "eslint": "^8.20.0",
    "got": "^12.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-glob-import": "^0.5.0",
    "tslib": "^2.4.0",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4",
    "vitest": "^0.18.1"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.5.0"
}
