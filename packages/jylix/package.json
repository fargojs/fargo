{
  "name": "jylix",
  "type": "module",
  "version": "0.0.1",
  "description": "A self-hosted, open-source vsix marketplace.",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/jylix/jylix/blob/main/packages/jylix#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jylix/jylix",
    "directory": "packages/jylix"
  },
  "bugs": {
    "url": "https://github.com/jylix/jylix/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "require": "./dist/config.cjs",
      "types": "./dist/config.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs",
      "types": "./dist/plugin.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "jylix": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint --cache {src,tests}/**/*.ts"
  },
  "dependencies": {
    "c12": "^1.2.0",
    "cac": "^6.7.14",
    "chalk": "^5.2.0",
    "debug": "^4.3.4",
    "esbuild": "^0.16.17",
    "globby": "^13.1.3"
  },
  "devDependencies": {
    "prompts": "^2.4.2"
  }
}
