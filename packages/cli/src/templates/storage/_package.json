{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "dist/plugin.js",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    <%- dep("@zotera/types") %>,
    <%- dep("typescript") %><% if (vitest) { %>,
    <%- dep("vitest") %><% } %><% if (rollup) { %>,
    <%- dep("rollup") %>,
    <%- dep("@rollup/plugin-commonjs") %>,
    <%- dep("@rollup/plugin-node-resolve") %>,
    <%- dep("@rollup/plugin-typescript") %>,
    <%- dep("tslib") %><% } %>
  },
  "keywords": ["zotera-plugin", "zotera"],
  "scripts": {
    "dev": <% if (rollup) { %> "rollup --config rollup.config.ts --configPlugin typescript --watch" <% } else { %> "tsc --watch" <% } %>,
    "build": <% if (rollup) { %> "rollup --config rollup.config.ts --configPlugin typescript" <% } else { %> "tsc" <% } %><% if (vitest) { %>,
    "test": "vitest run" <% } %>
  },
  "zotera": {
    "options": {
      "minion": {
        "type": "boolean",
        "default": true,
      }
    }
  }
}