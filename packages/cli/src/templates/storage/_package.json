{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "dist/plugin.js",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@zotera/api": "*" <% if (rollup) { %>,
    "rollup": "2.77.0",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.3",
    "tslib": "2.4.0" <% } %>,
    "typescript": "4.7.4" <% if (vitest) { %>,
    "vitest": "0.18.1" <% } %>
  },
  "keywords": ["zotera-plugin", "zotera"],
  "scripts": {
    "dev": <% if (rollup) { %> "rollup --config rollup.config.ts --configPlugin typescript --watch" <% } else { %> "tsc --watch" <% } %>,
    "build": <% if (rollup) { %> "rollup --config rollup.config.ts --configPlugin typescript" <% } else { %> "tsc" <% } %><% if (vitest) { %>,
    "test": "vitest run" <% } %>
  }
}